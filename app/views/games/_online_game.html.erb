<div data-controller="online" data-online-game-id-value="<%= @game.id %> ">
  <div data-user =<%=@user%> data-url=<%=@url%> data-player = "player1" data-online-target ="player"></div>
  <h2><%= @game.name %></h2>
  <div class=<%=@display_waiting_class%> data-online-target="waiting">
    <p>Waiting for an other player to join</p>
    <p>You can directly share the URL : <%= game_url(@game) %></p>
  </div>
  <div class=<%=@display_game_class%> data-online-target="display">
    <%= render 'board' %>
  </div>
  <div class="d-none" data-online-target="results">
    <p class="mt-3" data-online-target="winner">To replaced</p>
    <div class="btn btn-flat" data-action="click->online#refresh">
      <p> Replay ?</p>
    </div>
  </div>
</div>
