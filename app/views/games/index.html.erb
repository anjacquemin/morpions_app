<div class="container">
  <h1 class="d-flex justify-content-center mb-5">Welcome to morpions site</h1>
  <div class="d-flex justify-content-around">
    <div class="games">
      <% @not_ready_games.each do |game| %>
        <%= render "game", game: game %>
      <% end %>
    </div>
    <div class="new-game">
      <h2>Create a new game</h2>
      <%= simple_form_for(@game)do|f|%>
        <%= f.input :name %>
        <%= f.input :local, as: :radio_buttons, collection: ['Local', 'Online'] %>
        <%= f.submit%>
      <%end%>
    </div>
  </div>

</div>
